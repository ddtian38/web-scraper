 
  
  {{#each articles}}
    <div class="row">
        <div class="col s7">
          <div class="card medium z-depth-5" data-id="{{this._id}}">
              <div class="card-image">
                <img src="{{this.img}}">
                <span class="card-title"><a href="{{this.link}}">{{this.title}}</a></span>
              </div>
              <div class="card-content">
                  <p>{{this.summary}}</p>
              </div>
              <div class="card-action">
                <a class="waves-effect waves-light  btn-small comment-btn modal-trigger" href="#comment" data-id="{{this._id}}">Comment</a>
                <a class="waves-effect waves-light  btn-small view-btn" data-id="{{this._id}}">View Comments</a>
              </div>
          </div>
        </div>
        
        <div class="comments-section col s5" style="display: none;"  data-id="{{this._id}}">
        </div>
    </div>
  {{/each}}

  {{> modal}}